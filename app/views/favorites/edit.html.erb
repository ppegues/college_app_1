<% if @favorite.errors.any? %>
  <% @favorite.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Edit Favorite #<%= @favorite.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_favorite/<%= @favorite.id %>" class="form-horizontal">
      <!-- Label and input for profile_id -->
      <div class="form-group">
        <label for="profile_id" class="col-sm-2 control-label">
          Profile
        </label>
        <div class="col-sm-10">
          <input type="text" id="profile_id" name="profile_id" placeholder="Profile" class="form-control" value="<%= @favorite.profile_id %>">
        </div>
      </div>

      <!-- Label and input for school_id -->
      <div class="form-group">
        <label for="school_id" class="col-sm-2 control-label">
          School
        </label>
        <div class="col-sm-10">
          <input type="text" id="school_id" name="school_id" placeholder="School" class="form-control" value="<%= @favorite.school_id %>">
        </div>
      </div>

      <!-- Label and input for region_id -->
      <div class="form-group">
        <label for="region_id" class="col-sm-2 control-label">
          Region
        </label>
        <div class="col-sm-10">
          <input type="text" id="region_id" name="region_id" placeholder="Region" class="form-control" value="<%= @favorite.region_id %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Favorite" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

