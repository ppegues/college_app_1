<% if @profile.errors.any? %>
  <% @profile.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Add Profile</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_profile" class="form-horizontal">
      <!-- Label and input for username -->
      <div class="form-group">
        <label for="username" class="col-sm-2 control-label">
          Username
        </label>
        <div class="col-sm-10">
          <input type="text" id="username" name="username" placeholder="Username" class="form-control" value="<%= @profile.username %>">
        </div>
      </div>

      <!-- Label and input for image -->
      <div class="form-group">
        <label for="image" class="col-sm-2 control-label">
          Image
        </label>
        <div class="col-sm-10">
          <input type="text" id="image" name="image" placeholder="Image" class="form-control" value="<%= @profile.image %>">
        </div>
      </div>

      <!-- Label and input for high_school -->
      <div class="form-group">
        <label for="high_school" class="col-sm-2 control-label">
          High school
        </label>
        <div class="col-sm-10">
          <input type="text" id="high_school" name="high_school" placeholder="High school" class="form-control" value="<%= @profile.high_school %>">
        </div>
      </div>

      <!-- Label and input for GPA -->
      <div class="form-group">
        <label for="GPA" class="col-sm-2 control-label">
          Gpa
        </label>
        <div class="col-sm-10">
          <input type="text" id="GPA" name="GPA" placeholder="Gpa" class="form-control" value="<%= @profile.GPA %>">
        </div>
      </div>

      <!-- Label and input for SAT -->
      <div class="form-group">
        <label for="SAT" class="col-sm-2 control-label">
          Sat
        </label>
        <div class="col-sm-10">
          <input type="text" id="SAT" name="SAT" placeholder="Sat" class="form-control" value="<%= @profile.SAT %>">
        </div>
      </div>

      <!-- Label and input for ACT -->
      <div class="form-group">
        <label for="ACT" class="col-sm-2 control-label">
          Act
        </label>
        <div class="col-sm-10">
          <input type="text" id="ACT" name="ACT" placeholder="Act" class="form-control" value="<%= @profile.ACT %>">
        </div>
      </div>

      <!-- Label and input for extras -->
      <div class="form-group">
        <label for="extras" class="col-sm-2 control-label">
          Extras
        </label>
        <div class="col-sm-10">
          <textarea id="extras" name="extras" placeholder="Extras" class="form-control" rows="3"><%= @profile.extras %></textarea>
        </div>
      </div>

      <!-- Label and input for size -->
      <div class="form-group">
        <label for="size" class="col-sm-2 control-label">
          Size
        </label>
        <div class="col-sm-10">
          <input type="text" id="size" name="size" placeholder="Size" class="form-control" value="<%= @profile.size %>">
        </div>
      </div>

      <!-- Label and input for region_id -->
      <div class="form-group">
        <label for="region_id" class="col-sm-2 control-label">
          Region
        </label>
        <div class="col-sm-10">
          <input type="text" id="region_id" name="region_id" placeholder="Region" class="form-control" value="<%= @profile.region_id %>">
        </div>
      </div>

      <!-- Label and input for rank -->
      <div class="form-group">
        <label for="rank" class="col-sm-2 control-label">
          Rank
        </label>
        <div class="col-sm-10">
          <input type="text" id="rank" name="rank" placeholder="Rank" class="form-control" value="<%= @profile.rank %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Create Profile" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

