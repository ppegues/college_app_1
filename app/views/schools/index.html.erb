<div class="page-header">
  <h1>Schools</h1>
</div>

<p><a href="/schools/new" class="btn btn-primary">Add a New School</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Region</th>
      <th>Size</th>
      <th>Tuition</th>
      <th>Avg SAT</th>
      <th>Avg ACT</th>
      <th>Avg GPA</th>
      <th>Forbes Rank</th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
    <tr>
      <td><%= school.name %></td>
      <td><%= school.region %></td>
      <td><%= school.size %></td>
      <td><%= school.tuition %></td>
      <td><%= school.avg_SAT %></td>
      <td><%= school.avg_ACT %></td>
      <td><%= school.avg_GPA %></td>
      <td><%= school.rank_forbes %></td>

      <td>
        <a href="/schools/<%= school.id %>" class="btn btn-primary">
          <i class="fa fa-search-plus"></i>
        </a>
      </td>
      <td>
        <a href="/schools/<%= school.id %>/edit" class="btn btn-warning">
          <i class="fa fa-edit"></i>
        </a>
      </td>
      <td>
        <a href="/delete_school/<%= school.id %>" class="btn btn-danger">
          <i class="fa fa-trash-o"></i>
        </a>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

